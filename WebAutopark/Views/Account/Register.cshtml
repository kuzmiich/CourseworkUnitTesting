@model WebAutopark.Models.Identity.RegisterViewModel
 
@{
    ViewBag.Title = "Register";
}

<div class="card col-md-7 m-auto">
    <div class="card-header">
        <h2 class="mb-2 text-center">Register</h2>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="validation validation-fix"></div>
            
            <div class="form-group">
                <label asp-for="Email" class="control-label ml-md-1"></label>
                <input asp-for="Email" class="form-control" placeholder="user@gmail.com"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label ml-md-1"></label>
                <input asp-for="Password" class="form-control" placeholder="********"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label ml-md-1">Confirm password</label>
                <input asp-for="PasswordConfirm" class="form-control" placeholder="********"/>
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Register" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>