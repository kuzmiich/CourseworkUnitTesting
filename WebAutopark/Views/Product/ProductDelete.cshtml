@model ProductViewModel

@{
    ViewData["Title"] = "VehicleDelete";
}

<div class="card col-md-7 m-auto">
    <div class="card-header">
        <h3 class="text-center">Are you sure you want to delete this?</h3>
    </div>
    <div class="card-body">
        <h4 class="mb-3 text-center">Product</h4>
        <form asp-action="ProductDelete" asp-controller="Product">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label ml-md-1"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label ml-md-1"></label>
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgUrl" class="control-label ml-md-1"></label>
                <input asp-for="ImgUrl" class="form-control"/>
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label ml-md-1"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Yes" class="btn btn-danger"/>
            </div>
        </form>

    </div>
</div>

<div class="text-center mt-3">
    <a class="btn btn-outline-primary" asp-action="Index">No</a>
</div>