@model IEnumerable<WebAutopark.Models.VehicleViewModel>

@{ ViewData["Title"] = "VehicleList"; }

<h1 class="text-center">Vehicle page</h1>

<form method="get">
    <div class="form-inline form-group">
        <label class="control-label mr-3">Sort criteria: </label>
        <select name="criteria" class="form-control mr-2" id="criteria">
            <option selected value="1">Id</option>
            <option value="2">Name</option>
            <option value="3">Type</option>
            <option value="4">Mileage</option>
        </select>
        <label class="control-label mr-1">Is ascending:</label>
        <input type="checkbox" name="isAscending" value="true" id="isAscending"/>

        <input type="submit" value="filter" class="btn btn-primary ml-2" id="filter"/>
    </div>
</form>

<table class="table">
    <thead class="thead-light">
    <tr>
        <th>
            Id
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleType.TypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManufactureYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mileage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufactureYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mileage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td class="text-center" style="min-width: 160px">
                @Html.ActionLink("View", "VehicleInfo", new {id = item.Id}) |
                @Html.ActionLink("Edit", "VehicleUpdate", new {id = item.Id}) |
                @Html.ActionLink("Delete", "VehicleDelete", new {id = item.Id})
                @using (Html.BeginForm("Create", "Order", new {id = item.Id}, FormMethod.Post))
                {
                    @Html.TextBoxFor(v => item.Id, new {@readonly = "readonly", @hidden = "hidden"})
                    <button type="submit" class="btn btn-link p-0">Create order</button>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-action="VehicleCreate">Create new</a>
</div>