@model OrderViewModel

@{
    ViewData["Title"] = "OrderCreate";
}

<div class="card col-md-10 m-auto">
    <div class="card-header">
        <h2 class="mb-2 text-center">Create Order</h2>
    </div>
    <div class="card-body">
        <form asp-action="OrderCreate" asp-controller="Order">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden="hidden"/>

            <div class="form-group">
                <label asp-for="UserId" class="control-label ml-md-1"></label>
                <input asp-for="UserId" class="form-control"/>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            @foreach (var item in Model.CartItems)
            {
                <div class="form-group">
                    <label asp-for="@item.Product.Id" class="control-label ml-md-1"></label>
                    <input asp-for="@item.Product.Id" class="form-control"/>
                    <span asp-validation-for="@item.Product.Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@item.Product.Name" class="control-label ml-md-1"></label>
                    <input asp-for="@item.Product.Name" class="form-control"/>
                    <span asp-validation-for="@item.Product.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@item.Product.Price" class="control-label ml-md-1"></label>
                    <input asp-for="@item.Product.Price" class="form-control"/>
                    <span asp-validation-for="@item.Product.Price" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Price" class="control-label ml-md-1">Total price</label>
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="Description" class="control-label ml-md-1"></textarea>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group text-center">
                <input type="submit" value="CreateOrder" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}