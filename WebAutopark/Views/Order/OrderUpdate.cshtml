@model OrderViewModel
@using Microsoft.AspNetCore.Identity
@using WebAutopark.Core.Entities.Identity

@inject UserManager<User> _userManager
@{
    ViewData["Title"] = "OrderUpdate";
}

<div class="card col-md-8 m-auto">
    <div class="card-header">
        <h2 class="mb-2 text-center">Order Update</h2>
    </div>
    <div class="card-body">
        <form asp-action="OrderUpdate" asp-controller="Order" asp-route-userId="@_userManager.GetUserId(User)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden="hidden"/>
            <input asp-for="CartItems" hidden="hidden"/>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label ml-md-1"></label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label ml-md-1"></label>
                <input asp-for="LastName" class="form-control"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label ml-md-1"></label>
                <input asp-for="Address" class="form-control"/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label ml-md-1"></label>
                <textarea asp-for="Description" class="w-100" placeholder="text"></textarea>
            </div>
            
            <div class="form-group">
                <label class="control-label ml-md-1">Total Price:</label>
                <input asp-for="TotalPrice" class="form-control" readonly/>
            </div>
            
            <div class="form-group text-center">
                <input type="submit" value="CreateOrder" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}