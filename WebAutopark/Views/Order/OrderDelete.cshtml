@model OrderViewModel
@using Microsoft.AspNetCore.Identity
@using WebAutopark.Core.Entities.Identity

@inject UserManager<User> _userManager
@{
    ViewData["Title"] = "OrderDelete";
}

<div class="card col-md-8 m-auto">
    <div class="card-header">
        <h3 class="text-center">Are you sure you want to delete this?</h3>
    </div>
    <div class="card-body">
        <h4 class="mb-3 text-center">Order Delete</h4>
        <form asp-action="OrderDelete" asp-controller="Order">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Id" class="control-label ml-md-1"></label>
                <input asp-for="Id" class="form-control" readonly/>
            </div>
            
            <div class="form-group">
                <label asp-for="FirstName" class="control-label ml-md-1"></label>
                <input asp-for="FirstName" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label ml-md-1"></label>
                <input asp-for="LastName" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label ml-md-1"></label>
                <input asp-for="Address" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label ml-md-1"></label>
                <textarea asp-for="Description" class="w-100" style="min-height: 200px;" placeholder="text" readonly></textarea>
            </div>
            
            <div class="form-group">
                <label class="control-label ml-md-1">Total Price:</label>
                <input asp-for="TotalPrice" class="form-control" readonly/>
            </div>
            
            
            <div class="form-group text-center">
                <input type="submit" value="Yes" class="btn btn-danger"/>
            </div>
        </form>

    </div>
</div>

<div class="text-center mt-3">
    <a class="btn btn-outline-primary" asp-action="Index">No</a>
</div>