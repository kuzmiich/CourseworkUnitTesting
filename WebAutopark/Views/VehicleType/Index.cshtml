@model IEnumerable<VehicleTypeViewModel>

@{
    ViewData["Title"] = "VehicleTypeList";
}
<h1 class="text-center">VehicleTypes page</h1>

<table class="table">
    <thead class="thead-light">
    <tr>
        <th>
            Id
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaxCoefficient)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td width="20%">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td width="20%">
                @Html.DisplayFor(modelItem => item.TypeName)
            </td>
            <td width="20%">
                @Html.DisplayFor(modelItem => item.TaxCoefficient)
            </td>
            <td class="text-center">
                @Html.ActionLink("View", "VehicleTypeInfo", new {id = item.Id}) |
                @Html.ActionLink("Edit", "VehicleTypeUpdate", new {id = item.Id}) |
                @Html.ActionLink("Delete", "VehicleTypeDelete", new {id = item.Id})
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="text-center mt-3">
    <a class="btn btn-primary" asp-action="VehicleTypeCreate">Create new</a>
</div>