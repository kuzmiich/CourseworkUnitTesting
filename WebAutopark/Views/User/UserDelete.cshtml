@model WebAutopark.Core.Entities.Identity.User

@{
    ViewData["Title"] = "UserDelete";
}

<div class="card col-md-7 m-auto">
    <div class="card-header">
        <h3 class="text-center">Are you sure you want to delete this?</h3>
    </div>
    <div class="card-body">
        <h4 class="mb-3 text-center">VehicleShoppingCarts</h4>
        <form asp-action="UserDelete" asp-controller="User">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label ml-md-1"></label>
                <input asp-for="Id" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label ml-md-1"></label>
                <input asp-for="Email" class="form-control" readonly/>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Yes" class="btn btn-danger"/>
            </div>
        </form>

    </div>
</div>

<div class="text-center mt-3">
    <a class="btn btn-outline-primary" asp-action="Index">No</a>
</div>